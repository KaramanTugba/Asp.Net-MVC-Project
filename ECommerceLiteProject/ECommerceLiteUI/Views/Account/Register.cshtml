@using ECommerceLiteUI.Models
@model RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="row margin-vert-30">
    <!--Register başladı-->
    <!--CORE da 12.satırı kullanabiliriz.Burada kullanamayız.
        Çünkü register ve account bildirimi yapamıyoruz-->
    <!--<form class="form-horizontal" method="post"></form>-->

    <div class="col-md-6 col-md-offset-3 col-md-offset-3">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <span class="text-danger">@Html.ValidationSummary()</span>
            <br />
            <div class="signup-header" align="center">
                <h2>Hemen Kayıt Olabilirsiniz</h2>
                <p>
                    Zaten üye misiniz?
                    Üye olduysanız <a href="@Url.Action("Login","Account")">BURAYA</a> tıklayarak giriş yapabilirsiniz.
                </p>
            </div>
            <hr />
            <b>@Html.DisplayNameFor(x => x.TCNumber)</b><br />
            @*@Html.DisplayName("TC Kimlik Numarası")*@
            @Html.TextBoxFor(x => x.TCNumber, new { @class = "form-control margin-bottom-10" })
            <br />
            <b>@Html.DisplayNameFor(x => x.Name)</b><br />
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control margin-bottom-10" })
            <br />
            <b>@Html.DisplayNameFor(x => x.Surname)</b><br />
            @Html.TextBoxFor(x => x.Surname, new { @class = "form-control margin-bottom-10" })
            <br />
            <b>@Html.DisplayNameFor(x => x.Email)</b><br />
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control margin-bottom-10", type = "email" })
            <br />
            <div class="row">
                <div class="col-md-6">
                    <label>
                        Şifre
                        <span class="color-red">*</span>
                    </label>
                    @Html.TextBoxFor(x => x.Password, new { @class = "form-control margin bottom-10", type = "password" })
                </div>
                <div class="col-md-6">
                    <label>
                        Şifre Tekrarı
                        <span class="color-red">*</span>
                    </label>
                    @Html.TextBoxFor(x => x.ConfirmPassword, new { @class = "form-control margin bottom-10", type = "password" })
                </div>

            </div>
            <br />
            <div class="row">
                <div class="col-md-offset-10">
                    <button type="submit" class="btn btn-default" style="background-color:#D10024;color:white">Kayıt Ol</button>
                </div>
            </div>

        }

    </div>


    <!--Register bitti-->

</div>
